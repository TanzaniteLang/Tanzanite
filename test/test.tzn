fun printf(format: char**, ...): int
end

fun getchar(): int
end

fun add(a: Int = 4, b: Int = 3): Int
  return a + b
end

fun main(): int
  printf "%p\n", nil + 10

  heh: void* = nil
  printf "%p %p\n", &heh, heh + 7

  printf "2 + 2 = %d\n", add(2, 2)
  printf "add() = %d\nadd(7) = %d\n", add(), add(7)

  c: char

  begin
    printf "Write a letter\nType Q to quit\n"

    c = getchar
    getchar # Flush \n

    unless c == 'Q' then
      printf "\nYou typed: %c\n\n", c
      next
    end

    break
  end while true

  return 0
end
